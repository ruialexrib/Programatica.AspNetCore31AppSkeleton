@model Programatica.AspNetCore31AppSkeleton.ViewModels.LoginViewModel
@using Programatica.AspNetCore31AppSkeleton.Extensions
@inject Programatica.AspNetCore31AppSkeleton.Adapters.IPageAdapter _page

@{ Layout = ""; }

<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>AppSkeleton | Log in</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Font Awesome -->
    <link href="~/plugins/fontawesome-free/css/all.css" rel="stylesheet" />
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- icheck bootstrap -->
    <link href="~/plugins/icheck-bootstrap/icheck-bootstrap.css" rel="stylesheet" />
    <!-- Theme style -->
    <link href="~/lib/adminlte/css/adminlte.css" rel="stylesheet" />
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
    <!-- plugins -->
    <link href="~/plugins/toastr/toastr.css" rel="stylesheet" />

</head>

<body class="hold-transition login-page">

    <div class="login-box">
        <div class="login-logo">
            <a href="#"><b>App</b>Skeleton</a>
        </div>
        <!-- /.login-logo -->
        <div class="card">
            <div class="card-body login-card-body">
                <p class="login-box-msg">Sign in to start your session</p>

                <form asp-action="Login">
                    <div class="input-group mb-3">
                        <input asp-for="Username" class="form-control" placeholder="Username (type admin)" />
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-user"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input asp-for="Password" class="form-control" placeholder="Password (type pass)" />
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-8">
                            <div class="icheck-primary">
                                <input type="checkbox" asp-for="IsPersistent" />
                                <label for="IsPersistent">
                                    Remember Me
                                </label>
                            </div>
                        </div>
                        <!-- /.col -->
                        <div class="col-4">
                            <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                        </div>
                        <!-- /.col -->
                    </div>
                    <div class="row">
                        <div asp-validation-summary="All" class="text-danger"></div>
                    </div>
                </form>

            </div>
            <!-- /.login-card-body -->
        </div>
    </div>
    <!-- /.login-box -->
    <!-- jQuery -->
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <!-- AdminLTE App -->
    <script src="~/lib/adminlte/js/adminlte.js"></script>
    <!-- plugins -->
    <script src="~/plugins/toastr/toastr.min.js"></script>
    <!-- site -->
    <script src="~/js/cfg.js"></script>
    <script src="~/js/global.js"></script>
    <script src="~/js/modal.js"></script>
    <script src="~/js/site.js"></script>

    <script type="text/javascript">

        var _page = _page || {};

        $(document).ready(function () {

            _page.messages = [];
            _page.warnings = [];
            _page.alerts = [];

            // add messages
            @foreach(var m in _page.PageMessages.OrEmptyIfNull())
            {
                @:_page.messages.push('@m');
            }
            @foreach(var w in _page.PageWarnings.OrEmptyIfNull())
            {
                @:_page.warnings.push('@w');
            }
            @foreach(var a in _page.PageAlerts.OrEmptyIfNull())
            {
                @:_page.alerts.push('@a');
            }

            _page.messages.forEach((m) => { global.toastinfo(m); });
            _page.warnings.forEach((w) => { global.toastwarning(w); });
            _page.alerts.forEach((a) => { global.toasterror(a); });

          });

    </script>

</body>
</html>
