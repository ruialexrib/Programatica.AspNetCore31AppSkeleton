@model List<Audit>

@{
    string on_grid_dblclick = Guid.NewGuid().JsNormalize();
    string on_close_click = Guid.NewGuid().JsNormalize();
    string grid = Guid.NewGuid().JsNormalize();
}


<div class="modal-header">
    <h5 class="modal-title"><i class="far fa-lock"></i> Audit</h5>
</div>

<div class="modal-body">

    <div class="row">
        <div class="col-md-12 p-3">

            <ejs-grid id="@grid"
                      width="auto"
                      dataSource="@Model"
                      allowPaging="true"
                      allowSorting="true"
                      allowFiltering="true"
                      recordDoubleClick="@on_grid_dblclick">
                <e-grid-pagesettings pageSizes="true" pageSize="5"></e-grid-pagesettings>
                <e-grid-filterSettings type="Excel"></e-grid-filterSettings>
                <e-grid-columns>
                    <e-grid-column width="70" field="Id" headerText="ID" isPrimaryKey="true"></e-grid-column>
                    <e-grid-column field="ContentFunction" headerText="FUNCTION" width="150"></e-grid-column>
                    <e-grid-column width="150" field="CreatedUser" headerText="USER"></e-grid-column>
                    <e-grid-column width="150" field="CreatedDate" headerText="DATE" customFormat="@(new { type ="date", format="yyyy-MM-dd HH:mm:ss" })" type="date"></e-grid-column>
                </e-grid-columns>
            </ejs-grid>

        </div>
    </div>

</div>

<div class="modal-footer">
    <a href="#" class="btn btn-secondary" onclick="@(on_close_click)(event)">CLOSE</a>
</div>

<script type="text/javascript">

    @on_grid_dblclick = (args) => {
        var id = args.rowData.Id;
        alert(id);
    }

    @on_close_click = (e) => {
        e.preventDefault();
        modal.close(e);
    };

</script>

<ejs-scripts></ejs-scripts>

