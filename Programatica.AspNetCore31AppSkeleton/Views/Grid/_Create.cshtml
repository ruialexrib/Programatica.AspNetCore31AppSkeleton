@using Programatica.Framework.Core.Extensions
@inject IAppPageAdapter _page

@model DummyViewModel

<div class="modal-header">
    <h5 class="modal-title"><i class="far fa-edit"></i> Create Dummy Record</h5>
</div>

<div class="modal-body">

    <div class="row">
        <div class="col-md-12">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </form>
        </div>
    </div>

</div>

<div class="modal-footer">
    <a href="#" class="btn btn-secondary" onclick="on_cmd_close_click(event)">CLOSE</a>
    <a href="#" class="btn btn-primary" onclick="on_cmd_save_click(event)" data-loading-text="SAVING...">SAVE</a>
</div>

<script type="text/javascript">

    var view = view || {};
    view.messages = [];


    @foreach (var m in _page.PageMessages.OrEmptyIfNull())
    {
        @:view.messages.push('@m');
    }

    view.messages.forEach((m) => { global.toastinfo(m); });

</script>