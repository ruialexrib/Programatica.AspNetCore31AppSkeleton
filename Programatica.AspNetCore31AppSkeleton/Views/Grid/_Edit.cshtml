@model Programatica.AspNetCore31AppSkeleton.ViewModels.DummyViewModel

<div class="modal-header">
    <h5 class="modal-title"><i class="far fa-edit"></i> Edit Dummy Record</h5>
</div>

<div class="modal-body">

    <div class="row">
        <div class="col-md-12">
            <form asp-action="Edit">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group row">
                    <label asp-for="Id" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Id" class="form-control" disabled="disabled" />
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Description" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>

            </form>
        </div>
    </div>

</div>

<div class="modal-footer">
    <a href="#" class="btn btn-secondary" onclick="on_cmd_close_click(event)">CLOSE</a>
    <a href="#" class="btn btn-primary" onclick="on_cmd_edit_click(event)" data-loading-text="SAVING...">SAVE</a>
</div>