@inject IAppPageAdapter _page

<!DOCTYPE html>
<html lang="en">

<head>

    <style>

        html {
            font-size: 13px !important;
        }

        body {
            font-family: 'Amazon Ember', Roboto, 'Open Sans', "Source Sans Pro", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol" !important;
            font-size: 1rem !important;
        }
    </style>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <title>AppSkeleton | Demo</title>


    <!-- Font Awesome -->
    <link href="~/plugins/fontawesome-free/css/all.css" rel="stylesheet" />
    <!-- icheck bootstrap -->
    <link href="~/plugins/icheck-bootstrap/icheck-bootstrap.css" rel="stylesheet" />
    <!-- Theme style -->
    <link href="~/lib/adminlte/css/adminlte.css" rel="stylesheet" />
    <!-- plugins -->
    <link href="~/plugins/toastr/toastr.css" rel="stylesheet" />
    <!-- site -->
    <link href="~/css/site.css" rel="stylesheet" />

</head>

<body class="hold-transition bg-dark">

    @RenderBody()

    <!-- jquery -->
    <script src="~/lib/jquery/dist/jquery.js"></script>

    <!-- plugins -->
    <script src="~/plugins/toastr/toastr.min.js"></script>

    <!-- site -->
    <script src="~/js/appskeleton.js"></script>
    <script src="~/js/site.js"></script>

    @RenderSection("Scripts", required: false)

    <!-- global IPageAdapter razor scripts -->
    <script type="text/javascript">

        $(document).ready(function () {
            // add messages
            @foreach(var m in _page.PageMessages.OrEmptyIfNull())
            {
                @:global.toastinfo("@m");
            }
            @foreach(var w in _page.PageWarnings.OrEmptyIfNull())
            {
                @:global.toastwarning("@w");
            }
            @foreach(var a in _page.PageAlerts.OrEmptyIfNull())
            {
                @:global.toasterror("@a");
            }
        });

    </script>

</body>
</html>

