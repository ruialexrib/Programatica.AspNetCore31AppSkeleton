@model UserViewModel

@{
    string on_save_click = Guid.NewGuid().JsNormalize();
    string form = Guid.NewGuid().JsNormalize();
}

<div class="modal-header">
    <h5 class="modal-title"><i class="far fa-edit"></i> Edit User</h5>
</div>

<div class="modal-body">

    <div class="row">
        <div class="col-md-12">
            <form asp-action="Edit" id="@form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @*<input asp-for="Id" class="form-control" hidden="hidden" />
                    <input asp-for="SystemId" class="form-control" hidden="hidden" />*@

                <ul class="nav nav-tabs" id="myTab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="true">Profile</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="contacts-tab" data-toggle="tab" href="#contacts" role="tab" aria-controls="contacts" aria-selected="false">Contacts</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="comments-tab" data-toggle="tab" href="#comments" role="tab" aria-controls="comments" aria-selected="false">Comments</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="audit-tab" data-toggle="tab" href="#audit" role="tab" aria-controls="audit" aria-selected="false">Audit</a>
                    </li>
                </ul>

                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                        <div class="col-md-12 p-3">
                            <div class="form-group row">
                                <div class="col-sm-3">
                                    <label asp-for="Username" class="control-label"></label>
                                </div>
                                <div class="col-sm-9">
                                    <input asp-for="Username" class="form-control" />
                                    <span asp-validation-for="Username" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-3">
                                    <label asp-for="Password" class="control-label"></label>
                                </div>
                                <div class="col-sm-9">
                                    <input asp-for="Password" class="form-control" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-3">
                                    <label asp-for="Fullname" class="control-label"></label>
                                </div>
                                <div class="col-sm-9">
                                    <input asp-for="Fullname" class="form-control" />
                                    <span asp-validation-for="Fullname" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="contacts" role="tabpanel" aria-labelledby="contacts-tab">
                        <div class="col-md-12 p-3">
                            <div class="form-group row">
                                <div class="col-sm-3">
                                    <label asp-for="Email" class="control-label"></label>
                                </div>
                                <div class="col-sm-9">
                                    <input asp-for="Email" class="form-control" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-3">
                                    <label asp-for="Address" class="control-label"></label>
                                </div>
                                <div class="col-sm-9">
                                    <input asp-for="Address" class="form-control" />
                                    <span asp-validation-for="Address" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-3">
                                    <label asp-for="PostalCode" class="control-label"></label>
                                </div>
                                <div class="col-sm-9">
                                    <input asp-for="PostalCode" class="form-control" />
                                    <span asp-validation-for="PostalCode" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-3">
                                    <label asp-for="City" class="control-label"></label>
                                </div>
                                <div class="col-sm-9">
                                    <input asp-for="City" class="form-control" />
                                    <span asp-validation-for="City" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-3">
                                    <label asp-for="Country" class="control-label"></label>
                                </div>
                                <div class="col-sm-9">
                                    <input asp-for="Country" class="form-control" />
                                    <span asp-validation-for="Country" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="comments" role="tabpanel" aria-labelledby="comments-tab">
                        <div class="col-md-12 p-3">
                            <div class="form-group">
                                <textarea asp-for="Comments" class="form-control" rows="10"></textarea>
                                <span asp-validation-for="Comments" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="audit" role="tabpanel" aria-labelledby="audit-tab">
                        <div class="col-md-12 p-3">
                            <div class="form-group row">
                                <div class="col-sm-3">
                                    <label asp-for="Id" class="control-label"></label>
                                </div>
                                <div class="col-sm-9">
                                    <input asp-for="Id" class="form-control" disabled />
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-3">
                                    <label asp-for="SystemId" class="control-label"></label>
                                </div>
                                <div class="col-sm-9">
                                    <input asp-for="SystemId" class="form-control" disabled />
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-3">
                                    <label asp-for="CreatedDate" class="control-label"></label>
                                </div>
                                <div class="col-sm-9">
                                    <input asp-for="CreatedDate" class="form-control" disabled />
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-3">
                                    <label asp-for="CreatedUser" class="control-label"></label>
                                </div>
                                <div class="col-sm-9">
                                    <input asp-for="CreatedUser" class="form-control" disabled />
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-3">
                                    <label asp-for="LastModifiedDate" class="control-label"></label>
                                </div>
                                <div class="col-sm-9">
                                    <input asp-for="LastModifiedDate" class="form-control" disabled />
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-3">
                                    <label asp-for="LastModifiedUser" class="control-label"></label>
                                </div>
                                <div class="col-sm-9">
                                    <input asp-for="LastModifiedUser" class="form-control" disabled />
                                </div>
                            </div>
                            <div class="form-group row float-right">
                                <a href="#" class="btn btn-link" onclick="layout.show_audits_audithistory($('#@form #SystemId').val())">Show Audit History</a>
                            </div>
                        </div>
                    </div>

                </div>

            </form>
        </div>
    </div>

</div>

<div class="modal-footer">
    <a href="#" class="btn btn-secondary" onclick="modal.close(event)">CLOSE</a>
    <a href="#" class="btn btn-primary" onclick="@(on_save_click)(event)" data-loading-text="SAVING...">SAVE</a>
</div>

<script type="text/javascript">

    @on_save_click = (e) => {
        e.preventDefault();
        var url = "@Url.Action("Edit", "Users")";
        var data = {
            Id:         $("#@form #Id").val(),
            Username:   $("#@form #Username").val(),
            Password:   $("#@form #Password").val(),
            Email:      $("#@form #Email").val(),
            Fullname:   $("#@form #Fullname").val(),
            Address:    $("#@form #Address").val(),
            PostalCode: $("#@form #PostalCode").val(),
            City:       $("#@form #City").val(),
            Country:    $("#@form #Country").val(),
            Comments:   $("#@form #Comments").val(),
        };
        var token = global.gettoken();
        global.submit(url, data, token)
            .then((status) => {
                var id = status.id;
                modal.close(e);
                layout.refresh_usersgrid();
                global.toastsuccess("Record [" + id + "] updated with success!");
            })
            .catch((status) => {
                var s = JSON.parse(status);
                global.toasterror(s.message);
            });
    };

</script>